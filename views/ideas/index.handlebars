{{#each ideas}}
<div class="card card-body">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block mb-2">Edit</a>
    <form action="/ideas/{{id}}?_method=DELETE" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-danger btn-block" value="Delete"></form>
</div>
{{else}}
<p>No Video Ideas Listed</p>
{{/each}}